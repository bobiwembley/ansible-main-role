[Unit]
Description=Prometheus
Wants=network-online.target
After=network-online.target

[Service]
User=prometheus
Group=prometheus
Type=simple
ExecStart={{ bin_prom_folder }}/prometheus \
    --config.file={{ conf_prom_folder }}/prometheus.yml \
    --storage.tsdb.path={{ var_prom_folder }}/prometheus/ \
    --web.console.templates={{ conf_prom_folder }}/consoles \
    --web.console.libraries={{ conf_prom_folder }}/console_libraries \
    --web.listen-address=0.0.0.0:9090

[Install]
WantedBy=multi-user.target
